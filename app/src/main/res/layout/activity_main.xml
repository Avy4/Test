<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/brawlerPicture"
        android:layout_width="177dp"
        android:layout_height="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brawlerName"
        app:layout_constraintVertical_bias="0.566"
        app:srcCompat="@drawable/loading" />

    <TextView
        android:id="@+id/brawlerName"
        android:layout_width="269dp"
        android:layout_height="87dp"
        android:layout_marginTop="4dp"
        android:contentDescription="brawler name"
        android:fontFamily="@font/lilita_one"
        android:text="Brawler"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gadgetOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/brawlerPicture"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starPowerOne"
        app:layout_constraintVertical_bias="0.466" />

    <ImageView
        android:id="@+id/gadgetTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toEndOf="@+id/brawlerPicture"
        app:layout_constraintTop_toBottomOf="@+id/starPowerTwo"
        app:layout_constraintVertical_bias="0.466" />

    <ImageView
        android:id="@+id/starPowerOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/brawlerName"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starPowerTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/brawlerName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gadgetOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="gadget1"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/brawlerPicture"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gadgetOne"
        app:layout_constraintVertical_bias="0.517" />

    <TextView
        android:id="@+id/gadgetTwoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="gadget2"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toEndOf="@+id/brawlerPicture"
        app:layout_constraintTop_toBottomOf="@+id/gadgetTwo"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/starPowerOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="starpower1"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/gadgetOne"
        app:layout_constraintEnd_toStartOf="@+id/brawlerPicture"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starPowerOne"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/starPowerTwoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="starpower2"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/gadgetTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/brawlerPicture"
        app:layout_constraintTop_toBottomOf="@+id/starPowerTwo"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/description"
        android:layout_width="379dp"
        android:layout_height="62dp"
        android:fontFamily="@font/lilita_one"
        android:text="description"
        android:textAlignment="center"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/brawlerPicture"
        app:layout_constraintEnd_toStartOf="@+id/starPowerTwoName"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/starPowerOneName"
        app:layout_constraintTop_toBottomOf="@+id/brawlerName"
        app:layout_constraintVertical_bias="0.37" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="Back!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brawlerPicture"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/info"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:fontFamily="@font/lilita_one"
        android:text="More Info!"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brawlerPicture"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>